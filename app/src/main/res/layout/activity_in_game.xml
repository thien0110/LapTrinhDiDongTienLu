<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_ingame"
    android:backgroundTint="#4D000000"
    android:backgroundTintMode="src_over"
    android:padding="16dp"
    tools:context=".InGameActivity">


    <ImageView
        android:id="@+id/imageViewTimer"
        android:layout_width="88dp"
        android:layout_height="88dp"
        app:srcCompat="@drawable/ticktock" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@null"
        android:gravity="center"
        android:text="30"
        android:textAlignment="gravity"
        android:textColor="#fff"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/imageViewPicture"
        android:layout_width="131dp"
        android:layout_height="276dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/picture0"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/picture0" />

    <TableLayout
        android:layout_width="395dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/layout_cauhoi"

        android:baselineAligned="true"
        android:paddingLeft="15dp"
        android:paddingRight="20dp">


        <TextView
            android:id="@+id/textViewNdCauHoi"
            android:layout_width="321dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#fff"

            android:textSize="15dp" />


        <TableRow>

            <Button
                android:id="@+id/buttonDA1"
                android:layout_width="173dp"
                android:layout_height="55dp"
                android:background="@null"
                android:onClick="onClickTraLoi"
                android:text="Button"
                android:textColor="#F8F6F5" />

            <Button
                android:id="@+id/buttonDA2"
                android:layout_width="177dp"
                android:layout_height="55dp"
                android:background="@null"
                android:onClick="onClickTraLoi"
                android:text="Button"
                android:textColor="#fff" />
        </TableRow>

        <TableRow>


            <Button
                android:id="@+id/buttonDA3"
                android:layout_width="173dp"
                android:layout_height="55dp"
                android:background="@null"
                android:onClick="onClickTraLoi"
                android:text="Button"
                android:textColor="#fff" />

            <Button
                android:id="@+id/buttonDA4"
                android:layout_width="177dp"
                android:layout_height="55dp"
                android:background="@null"
                android:onClick="onClickTraLoi"
                android:text="Button"
                android:textColor="#fff" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/imageButtonPause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:onClick="onClickPause"
            app:srcCompat="@android:drawable/ic_media_pause" />

        <ImageButton
            android:id="@+id/imageButton50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:onClick="onClick50"
            app:srcCompat="@drawable/jpge50" />

        <ImageButton
            android:id="@+id/imageButtonPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:onClick="onClickCall"
            app:srcCompat="@drawable/jpge_phone" />

        <ImageButton
            android:id="@+id/imageButtonPeople"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:onClick="onClickPeople"
            app:srcCompat="@drawable/jpge_people" />
    </LinearLayout>
</RelativeLayout>