<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/begin"
    android:gravity="center"
    tools:context=".LumMatKhauActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <EditText
        android:textAlignment="center"

        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:textColorHint="#A59D9D"
        android:hint="Nhập tài khoản"
        android:id="@+id/editTextTaiKhoan"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_button_dapan" />
    <EditText
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:textColorHint="#A59D9D"
        android:hint="Nhập Email"
        android:id="@+id/editTextEmail"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_button_dapan" />

    <Button
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_dapan"
        android:id="@+id/buttonLumMatKhau"
        android:text="Lấy Lại Mật Khẩu"/>
    </LinearLayout>

</RelativeLayout>