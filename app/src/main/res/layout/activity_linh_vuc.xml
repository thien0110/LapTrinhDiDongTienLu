<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_begin"
    android:backgroundTint="#6F160E0E"
    android:backgroundTintMode="src_over"
    tools:context=".LinhVucActivity">

    <Button
        android:id="@+id/buttonLinhVuc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="ChonLinhVucOnClick"
        android:text="LinhVuc1" />

    <Button
        android:id="@+id/buttonLinhVuc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLinhVuc1"
        android:layout_centerInParent="true"
        android:onClick="ChonLinhVucOnClick"
        android:text="LinhVuc2" />
</RelativeLayout>